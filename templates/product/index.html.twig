{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
       <h1>Product</h1>
       <table>
       <thead>
       <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Size</th>
        </tr>
        </thead>
        <tbody>
        </tbody>
        {% for product in products %}
        <tr>
                <td>{{product.name}}</td>
                <td>{{product.description}}</td>
                <td>{{product.size}}</td>
        </tr>
        {% endfor %}
        </table>
{% endblock %}
